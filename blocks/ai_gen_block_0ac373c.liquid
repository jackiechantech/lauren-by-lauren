{% doc %}
  @prompt
    image going across the whole page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-full-width-image-{{ ai_gen_id }} {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .ai-full-width-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-full-width-image-img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  {% if block.settings.image_height == 'fixed' %}
    .ai-full-width-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.desktop_height }}px;
    }

    .ai-full-width-image-img-{{ ai_gen_id }} {
      height: 100%;
    }

    @media screen and (max-width: 749px) {
      .ai-full-width-image-wrapper-{{ ai_gen_id }} {
        height: {{ block.settings.mobile_height }}px;
      }
    }
  {% endif %}

  .ai-full-width-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-full-width-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 400px;
  }

  .ai-full-width-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-full-width-image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }
{% endstyle %}

<div class="ai-full-width-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-full-width-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 3000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-full-width-image-img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-full-width-image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-full-width-image-empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Full width image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_height",
      "label": "Image height",
      "options": [
        {
          "value": "auto",
          "label": "Adapt to image"
        },
        {
          "value": "fixed",
          "label": "Fixed height"
        }
      ],
      "default": "auto"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 200,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 600
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 400
    }
  ],
  "presets": [
    {
      "name": "Full width image"
    }
  ]
}
{% endschema %}
